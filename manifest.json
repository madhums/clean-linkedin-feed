{
  "manifest_version": 2,
  "name": "Clean Linkedin Feed",
  "description": "Hide social media (images, videos, previews) in linked in feed",
  "short_name": "clean_linkedin_feed",
  "version": "1.1",
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webNavigation",
    "https://*.linkedin.com/*",
    "http://*.linkedin.com/*",
    "https://linkedin.com/*",
    "http://linkedin.com/*"
  ],
  "icons": {},
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
